<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_default">
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_default_header" parent="text_default">
        <item name="android:textSize">@dimen/text_header</item>
    </style>

    <style name="text_default_label" parent="text_default">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_default_value" parent="text_default">
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>